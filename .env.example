# Twilio SMS API Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ASSISTANT_ID=your_openai_assistant_id

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id
AIRTABLE_CONVERSATION_TABLE=Conversations
AIRTABLE_SHIFTS_TABLE=Shifts
AIRTABLE_PREFERENCES_TABLE=Preferences
AIRTABLE_MOVIE_FAVORITES=Movie Favorites
AIRTABLE_MOVIES_WATCHED=Movies Watched

# Weather Service (OpenWeather)
OPENWEATHER_API_KEY=your_openweather_api_key
DEFAULT_WEATHER_LOCATION=Manchester,UK
TEMPERATURE_UNIT=metric  # metric (Celsius) or imperial (Fahrenheit)

# Transport APIs
# UK Rail (Darwin)
DARWIN_API_KEY=your_darwin_api_key

# Alternative Transport API
TRANSPORT_API_KEY=your_transport_api_key
TRANSPORT_APP_ID=your_transport_app_id
TRANSPORT_SIMULATION=false
DEFAULT_STATION=Urmston

# Movie Database (TMDB)
# Get your API key from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key
TMDB_LANGUAGE=en-US

# Email Configuration
EMAIL_USERNAME=your_email_address
EMAIL_PASSWORD=your_email_app_password
EMAIL_SERVER=imap.gmail.com
EMAIL_PORT=993

# Application Configuration
DEBUG=True
PORT=5000
FLASK_ENV=development
LOG_LEVEL=INFO 